.row
  .col-md-6.col-md-offset-3
    %h1 Log in
.row
  .col-md-6.col-md-offset-3
    = simple_form_for :signin, { url: login_path } do |f|
      = f.input :email, placeholder: 'user@domain.com'
      = f.input :password
      = f.button :submit, class: "btn-primary", value: 'Log in'
      = link_to 'Cancel', :back
